{
  "name": "image-duplicate-finder",
  "version": "1.0.0",
  "description": "基于大模型的图片重复查找系统",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "nodemon --watch src --exec \"electron .\"",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "image",
    "duplicate",
    "finder",
    "llava",
    "faiss",
    "ollama"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.imageduplicatefinder.app",
    "productName": "图片重复查找器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!vector_db/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
